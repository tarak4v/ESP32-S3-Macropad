{
  "name": "default",
  "version": "1.0.0",
  "description": "Default keymap for ESP32-S3 Macropad with DEV and MEETING profiles",
  "author": "tarak4v",
  "layout": "4x4",
  "profiles": {
    "DEV": {
      "name": "Developer Mode",
      "description": "Shortcuts for software development and coding",
      "color": "#00FF00",
      "keys": {
        "1": {
          "label": "Cut",
          "description": "Cut selected text",
          "action": "key",
          "modifiers": ["ctrl"],
          "key": "x",
          "hid_modifier": "0x01",
          "hid_keycode": "0x1B"
        },
        "2": {
          "label": "Copy",
          "description": "Copy selected text",
          "action": "key",
          "modifiers": ["ctrl"],
          "key": "c",
          "hid_modifier": "0x01",
          "hid_keycode": "0x06"
        },
        "3": {
          "label": "Paste",
          "description": "Paste from clipboard",
          "action": "key",
          "modifiers": ["ctrl"],
          "key": "v",
          "hid_modifier": "0x01",
          "hid_keycode": "0x19"
        },
        "4": {
          "label": "Copilot",
          "description": "Open GitHub Copilot in VS Code",
          "action": "key",
          "modifiers": ["ctrl"],
          "key": "i",
          "hid_modifier": "0x01",
          "hid_keycode": "0x0C"
        },
        "5": {
          "label": "Undo",
          "description": "Undo last action",
          "action": "key",
          "modifiers": ["ctrl"],
          "key": "z",
          "hid_modifier": "0x01",
          "hid_keycode": "0x1D"
        },
        "6": {
          "label": "Redo",
          "description": "Redo last undone action",
          "action": "key",
          "modifiers": ["ctrl"],
          "key": "y",
          "hid_modifier": "0x01",
          "hid_keycode": "0x1C"
        },
        "7": {
          "label": "Find",
          "description": "Find in file",
          "action": "key",
          "modifiers": ["ctrl"],
          "key": "f",
          "hid_modifier": "0x01",
          "hid_keycode": "0x09"
        },
        "8": {
          "label": "Replace",
          "description": "Find and replace",
          "action": "key",
          "modifiers": ["ctrl"],
          "key": "h",
          "hid_modifier": "0x01",
          "hid_keycode": "0x0B"
        },
        "9": {
          "label": "Save",
          "description": "Save current file",
          "action": "key",
          "modifiers": ["ctrl"],
          "key": "s",
          "hid_modifier": "0x01",
          "hid_keycode": "0x16"
        },
        "*": {
          "label": "Terminal",
          "description": "Toggle integrated terminal",
          "action": "key",
          "modifiers": ["ctrl"],
          "key": "`",
          "hid_modifier": "0x01",
          "hid_keycode": "0x35"
        },
        "0": {
          "label": "Comment",
          "description": "Toggle line comment",
          "action": "key",
          "modifiers": ["ctrl"],
          "key": "/",
          "hid_modifier": "0x01",
          "hid_keycode": "0x38"
        },
        "#": {
          "label": "Format",
          "description": "Format document",
          "action": "key",
          "modifiers": ["ctrl", "shift"],
          "key": "f",
          "hid_modifier": "0x03",
          "hid_keycode": "0x09"
        },
        "A": {
          "label": "Select All",
          "description": "Select all text",
          "action": "key",
          "modifiers": ["ctrl"],
          "key": "a",
          "hid_modifier": "0x01",
          "hid_keycode": "0x04"
        },
        "B": {
          "label": "Build",
          "description": "Build project",
          "action": "key",
          "modifiers": ["ctrl", "shift"],
          "key": "b",
          "hid_modifier": "0x03",
          "hid_keycode": "0x05"
        },
        "C": {
          "label": "Debug",
          "description": "Start debugging",
          "action": "key",
          "modifiers": [],
          "key": "F5",
          "hid_modifier": "0x00",
          "hid_keycode": "0x3E"
        },
        "D": {
          "label": "Palette",
          "description": "Command palette",
          "action": "key",
          "modifiers": ["ctrl", "shift"],
          "key": "p",
          "hid_modifier": "0x03",
          "hid_keycode": "0x13"
        }
      }
    },
    "MEETING": {
      "name": "Meeting Mode",
      "description": "Controls for video conferencing (Teams, Zoom, Meet)",
      "color": "#0078D4",
      "keys": {
        "1": {
          "label": "Mic Mute",
          "description": "Toggle microphone mute",
          "action": "key",
          "modifiers": ["ctrl", "shift"],
          "key": "m",
          "hid_modifier": "0x03",
          "hid_keycode": "0x10",
          "apps": ["Teams", "Zoom", "Meet"]
        },
        "2": {
          "label": "Video",
          "description": "Toggle video camera",
          "action": "key",
          "modifiers": ["ctrl", "shift"],
          "key": "o",
          "hid_modifier": "0x03",
          "hid_keycode": "0x12",
          "apps": ["Teams"]
        },
        "3": {
          "label": "Hand",
          "description": "Raise/lower hand",
          "action": "key",
          "modifiers": ["ctrl", "shift"],
          "key": "k",
          "hid_modifier": "0x03",
          "hid_keycode": "0x0E",
          "apps": ["Teams"]
        },
        "4": {
          "label": "Share",
          "description": "Share screen",
          "action": "key",
          "modifiers": ["ctrl", "shift"],
          "key": "e",
          "hid_modifier": "0x03",
          "hid_keycode": "0x08",
          "apps": ["Teams", "Zoom"]
        },
        "5": {
          "label": "Chat",
          "description": "Open chat panel",
          "action": "key",
          "modifiers": ["ctrl", "shift"],
          "key": "c",
          "hid_modifier": "0x03",
          "hid_keycode": "0x06",
          "apps": ["Teams"]
        },
        "6": {
          "label": "People",
          "description": "Show participants",
          "action": "key",
          "modifiers": ["ctrl", "shift"],
          "key": "p",
          "hid_modifier": "0x03",
          "hid_keycode": "0x13",
          "apps": ["Teams"]
        },
        "7": {
          "label": "Record",
          "description": "Start/stop recording",
          "action": "key",
          "modifiers": ["ctrl", "shift"],
          "key": "r",
          "hid_modifier": "0x03",
          "hid_keycode": "0x15",
          "apps": ["Teams", "Zoom"]
        },
        "8": {
          "label": "Blur",
          "description": "Toggle background blur",
          "action": "key",
          "modifiers": ["ctrl", "shift"],
          "key": "b",
          "hid_modifier": "0x03",
          "hid_keycode": "0x05",
          "apps": ["Teams"]
        },
        "9": {
          "label": "Reactions",
          "description": "Show reaction menu",
          "action": "key",
          "modifiers": ["ctrl", "shift"],
          "key": "l",
          "hid_modifier": "0x03",
          "hid_keycode": "0x0F",
          "apps": ["Teams", "Zoom"]
        },
        "*": {
          "label": "Full",
          "description": "Toggle fullscreen",
          "action": "key",
          "modifiers": ["ctrl", "shift"],
          "key": "f",
          "hid_modifier": "0x03",
          "hid_keycode": "0x09",
          "apps": ["Teams", "Zoom"]
        },
        "0": {
          "label": "Leave",
          "description": "Leave meeting",
          "action": "key",
          "modifiers": ["ctrl", "shift"],
          "key": "h",
          "hid_modifier": "0x03",
          "hid_keycode": "0x0B",
          "apps": ["Teams"]
        },
        "#": {
          "label": "Settings",
          "description": "Open device settings",
          "action": "key",
          "modifiers": ["ctrl", "shift"],
          "key": "s",
          "hid_modifier": "0x03",
          "hid_keycode": "0x16",
          "apps": ["Teams", "Zoom"]
        },
        "A": {
          "label": "Accept",
          "description": "Accept incoming call",
          "action": "key",
          "modifiers": ["ctrl", "shift"],
          "key": "a",
          "hid_modifier": "0x03",
          "hid_keycode": "0x04",
          "apps": ["Teams"]
        },
        "B": {
          "label": "Decline",
          "description": "Decline incoming call",
          "action": "key",
          "modifiers": ["ctrl", "shift"],
          "key": "d",
          "hid_modifier": "0x03",
          "hid_keycode": "0x07",
          "apps": ["Teams"]
        },
        "C": {
          "label": "Gallery",
          "description": "Toggle gallery view",
          "action": "key",
          "modifiers": ["ctrl", "shift"],
          "key": "g",
          "hid_modifier": "0x03",
          "hid_keycode": "0x0A",
          "apps": ["Zoom"]
        },
        "D": {
          "label": "Breakout",
          "description": "Breakout rooms",
          "action": "key",
          "modifiers": ["ctrl", "shift"],
          "key": "y",
          "hid_modifier": "0x03",
          "hid_keycode": "0x1C",
          "apps": ["Zoom"]
        }
      }
    }
  },
  "encoder": {
    "name": "Rotary Encoder",
    "modes": {
      "NORMAL": {
        "rotate_cw": {
          "label": "Volume Up",
          "action": "consumer",
          "key": "volume_up",
          "hid_usage": "0xE9"
        },
        "rotate_ccw": {
          "label": "Volume Down",
          "action": "consumer",
          "key": "volume_down",
          "hid_usage": "0xEA"
        },
        "short_press": {
          "label": "Mute",
          "action": "consumer",
          "key": "mute",
          "hid_usage": "0xE2"
        },
        "long_press": {
          "label": "Enter Menu",
          "action": "system",
          "key": "menu",
          "threshold_ms": 1000
        }
      },
      "MENU": {
        "rotate_cw": {
          "label": "Next Profile",
          "action": "system",
          "key": "profile_next"
        },
        "rotate_ccw": {
          "label": "Previous Profile",
          "action": "system",
          "key": "profile_prev"
        },
        "short_press": {
          "label": "Select Profile",
          "action": "system",
          "key": "profile_select"
        },
        "long_press": {
          "label": "Exit Menu",
          "action": "system",
          "key": "menu_exit",
          "threshold_ms": 1000
        }
      }
    }
  },
